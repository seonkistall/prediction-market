{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "paths": {
      "@prediction-market/types": ["./packages/types/src"],
      "@prediction-market/config": ["./packages/config/src"],
      "@prediction-market/utils": ["./packages/utils/src"],
      "@prediction-market/ui": ["./packages/ui/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "artifacts", "typechain-types"]
}
